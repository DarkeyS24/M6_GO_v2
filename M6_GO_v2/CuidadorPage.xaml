<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M6_GO_v2.CuidadorPage"
             Title="CuidadorPage">
    <ScrollView>
        <Grid RowDefinitions="280,*,*,*">
            <StackLayout Grid.Row="0">
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="labelNome" Text="OlÃ¡, Gustavo" FontSize="24" FontAttributes="Bold" Margin="30,10,10,0"/>
                    <Image Source="dotnet_bot.png" HeightRequest="50" HorizontalOptions="EndAndExpand" Margin="10">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTapToLogOut"/>
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>

                <Label Margin="30,0,0,0" FontAttributes="Bold" Text="Meus Atendimentos" FontSize="36"/>

                <StackLayout Orientation="Vertical" HorizontalOptions="Start" Margin="30,60,0,0">
                    <Label FontAttributes="Bold" Text="Paciente" FontSize="24"/>
                    <Border Stroke="#2B0B98" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="5">
                        <Picker SelectedIndexChanged="OnItemChanged" IsEnabled="True" FontSize="24" x:Name="idosoPicker" WidthRequest="400"/>
                    </Border>
                </StackLayout>
                
            </StackLayout>

            <Frame Padding="10" Margin="0,50,0,0" HorizontalOptions="Center" Grid.Row="1" WidthRequest="700" VerticalOptions="Start" BorderColor="#2B0B98">
                    <StackLayout Orientation="Horizontal">
                    <Button Clicked="Prev" WidthRequest="150" FontAttributes="Bold" FontSize="20" Text="Anterior" Grid.Column="0" HorizontalOptions="StartAndExpand"/>
                    <Label x:Name="anoLbl" Margin="60,0,0,0" Text="Setembro 2025" WidthRequest="300" FontSize="36" FontAttributes="Bold" Grid.Column="1" HorizontalOptions="CenterAndExpand"/>
                    <Button Clicked="Next" Text="Proximo" FontAttributes="Bold" FontSize="20" WidthRequest="150" Grid.Column="2" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                </Frame>

            <Frame Margin="50,122,50,0" Grid.Row="1" HeightRequest="375" Padding="5" BorderColor="#2B0B98">
                <Grid  x:Name="Calendar">

                </Grid>
            </Frame>

            <StackLayout Grid.Row="2" HorizontalOptions="StartAndExpand" Margin="50,30,0,0">
                <Frame BackgroundColor="#4CAF50" CornerRadius="30" WidthRequest="50" HeightRequest="50"/>
            </StackLayout>

            <StackLayout Grid.Row="2" HorizontalOptions="StartAndExpand" Margin="50,30,0,0">
                <Label Text="Passado" Margin="70,5,0,0" FontSize="24"/>
            </StackLayout>

            <StackLayout Grid.Row="2" HorizontalOptions="CenterAndExpand" Margin="0,30,120,0">
                <Frame BackgroundColor="#FF9800" CornerRadius="30" WidthRequest="50" HeightRequest="50"/>
            </StackLayout>

            <StackLayout Grid.Row="2" HorizontalOptions="CenterAndExpand" Margin="0,30,0,0">
                <Label Text="Presente" Margin="70,5,0,0" FontSize="24"/>
            </StackLayout>

            <StackLayout Grid.Row="2" HorizontalOptions="EndAndExpand" Margin="0,30,150,0">
                <Frame BackgroundColor="#2196F3" CornerRadius="30" WidthRequest="50" HeightRequest="50"/>
            </StackLayout>

            <StackLayout Grid.Row="2" HorizontalOptions="EndAndExpand" Margin="0,30,50,0">
                <Label Text="Futura" Margin="70,5,0,0" FontSize="24"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>